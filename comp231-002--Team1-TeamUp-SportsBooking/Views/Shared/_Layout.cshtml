<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - comp231_002__Team1_TeamUp_SportsBooking</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/comp231_002__Team1_TeamUp_SportsBooking.styles.css" asp-append-version="true" />
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-dark teamup-nav border-bottom mb-3">
        <div class="container">
            <a class="navbar-brand fw-semibold" asp-controller="Home" asp-action="Index">
                TeamUp
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarTeamUp" aria-controls="navbarTeamUp"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarTeamUp">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Courts" asp-action="Index">Courts</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Player" asp-action="Bookings">My games</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Player" asp-action="Profile">Profile</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Audience" asp-action="Index">Watch</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Teams" asp-action="Details" asp-route-id="1">
                            Team
                        </a>
                    </li>
                </ul>

                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link small" asp-controller="TeamOwner" asp-action="Index">Team owner</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link small" asp-controller="Admin" asp-action="Index">Admin</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link small" asp-controller="Account" asp-action="Login">Login</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - comp231_002__Team1_TeamUp_SportsBooking - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
