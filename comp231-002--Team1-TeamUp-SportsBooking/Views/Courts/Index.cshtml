@{
    ViewData["Title"] = "Courts";
}

<main class="main-container">

    <!-- HEADER -->
    <header class="section-header">
        <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
            <div>
                <div class="teamup-pill mb-2">
                    COURTS
                </div>
                <h1 class="section-title">
                    Find the right court for tonight's game.
                </h1>
                <p class="section-subtitle">
                    Browse available courts, compare locations, and book instantly.
                </p>
            </div>

            <div class="d-flex flex-wrap gap-2 justify-content-end">
                <a asp-controller="Player" asp-action="Create" class="btn-primary-teamup">
                    Quick book
                </a>
                <a asp-controller="Courts" asp-action="Index" class="btn-secondary-teamup">
                    Reset filters
                </a>
            </div>
        </div>
    </header>

    <!-- FILTER BAR -->
    <section class="card-teamup mb-3">
        <div class="filter-bar">
            <div class="filter-group">
                <label class="form-label" for="SportFilter">Sport</label>
                <select id="SportFilter" class="form-select">
                    <option value="">All sports</option>
                    <option value="Tennis">Tennis</option>
                    <option value="Basketball">Basketball</option>
                    <option value="Soccer">Soccer</option>
                    <option value="Badminton">Badminton</option>
                    <option value="Volleyball">Volleyball</option>
                </select>
            </div>

            <div class="filter-group">
                <label class="form-label" for="LocationFilter">Location</label>
                <select id="LocationFilter" class="form-select">
                    <option value="">Any area</option>
                    <option>Downtown</option>
                    <option>North</option>
                    <option>East</option>
                    <option>West</option>
                </select>
            </div>

            <div class="filter-group">
                <label class="form-label" for="SurfaceFilter">Surface</label>
                <select id="SurfaceFilter" class="form-select">
                    <option value="">Any surface</option>
                    <option>Hard</option>
                    <option>Clay</option>
                    <option>Grass</option>
                    <option>Indoor</option>
                </select>
            </div>

            <div class="filter-group filter-group-small">
                <label class="form-label">Availability</label>
                <div class="d-flex flex-wrap gap-1">
                    <button class="chip chip-active" type="button">
                        Available now
                    </button>
                    <button class="chip" type="button">
                        Evening
                    </button>
                    <button class="chip" type="button">
                        Weekend
                    </button>
                </div>
            </div>
        </div>
    </section>

    <!-- COURTS GRID -->
    <section class="courts-grid">

        <!-- Court 1 -->
        <article class="court-card">
            <div class="court-card-header">
                <div>
                    <div class="court-card-name">Downtown Sports Complex</div>
                    <div class="court-card-location">Hard court · Indoor</div>
                </div>
                <span class="badge-green">Available</span>
            </div>

            <div class="court-card-meta">
                <span>Next free slot: 19:00 - 20:00</span>
                <span>4 courts · Lights · Showers</span>
            </div>

            <div class="court-card-actions">
                <button class="btn-primary-teamup w-100">
                    Book this court
                </button>
            </div>
        </article>

        <!-- Court 2 -->
        <article class="court-card">
            <div class="court-card-header">
                <div>
                    <div class="court-card-name">Centennial Park Court A</div>
                    <div class="court-card-location">Grass · Outdoor</div>
                </div>
                <span class="badge-soft">Few slots left</span>
            </div>

            <div class="court-card-meta">
                <span>Next free slot: 21:30 - 22:30</span>
                <span>2 courts · No lights</span>
            </div>

            <div class="court-card-actions">
                <button class="btn-secondary-teamup w-100">
                    View details
                </button>
            </div>
        </article>

        <!-- Court 3 -->
        <article class="court-card">
            <div class="court-card-header">
                <div>
                    <div class="court-card-name">Community Gym 3</div>
                    <div class="court-card-location">Indoor · Basketball / Volleyball</div>
                </div>
                <span class="badge-soft">Booked until 20:00</span>
            </div>

            <div class="court-card-meta">
                <span>Next free slot: 20:00 - 21:30</span>
                <span>Full-size court · Scoreboard</span>
            </div>

            <div class="court-card-actions">
                <button class="btn-primary-teamup w-100">
                    Join waiting list
                </button>
            </div>
        </article>

        <!-- Court 4 -->
        <article class="court-card">
            <div class="court-card-header">
                <div>
                    <div class="court-card-name">Riverdale Courts</div>
                    <div class="court-card-location">Clay · Outdoor · Tennis</div>
                </div>
                <span class="badge-green">Available</span>
            </div>

            <div class="court-card-meta">
                <span>Next free slot: 17:00 - 18:00</span>
                <span>3 courts · Lights · Parking</span>
            </div>

            <div class="court-card-actions">
                <button class="btn-primary-teamup w-100">
                    Book this court
                </button>
            </div>
        </article>

        <!-- Court 5 -->
        <article class="court-card">
            <div class="court-card-header">
                <div>
                    <div class="court-card-name">Unionville Rec Center</div>
                    <div class="court-card-location">Indoor · Badminton</div>
                </div>
                <span class="badge-soft">Peak hours</span>
            </div>

            <div class="court-card-meta">
                <span>Next free slot: 22:00 - 23:00</span>
                <span>6 courts · Locker rooms</span>
            </div>

            <div class="court-card-actions">
                <button class="btn-secondary-teamup w-100">
                    View schedule
                </button>
            </div>
        </article>

    </section>
</main>
