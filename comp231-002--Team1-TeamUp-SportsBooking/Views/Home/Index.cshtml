@{
    ViewData["Title"] = "Player Dashboard";
}

<main class="main-container">

    <!-- HEADER -->
    <header class="section-header">
        <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
            <div>
                <div class="teamup-pill mb-2">
                    PLAYER DASHBOARD
                </div>
                <h1 class="section-title">
                    Evening games, all in one place.
                </h1>
                <p class="section-subtitle">
                    See today’s matches, your court bookings, and suggested games without scrolling
                    through endless group chats.
                </p>
            </div>

            <div class="d-flex flex-wrap gap-2 justify-content-end">
                <a asp-controller="Player" asp-action="Index" class="btn-primary-teamup">
                    Find a game
                </a>
                <a asp-controller="Player" asp-action="Create" class="btn-secondary-teamup">
                    Book a court
                </a>
            </div>
        </div>
    </header>

    <!-- MAIN DASHBOARD GRID -->
    <section class="dashboard-layout">

        <!-- LEFT COLUMN: games -->
        <div class="dashboard-main">

            <!-- Today's games -->
            <div class="card-teamup">
                <div class="card-teamup-header">
                    <div>
                        <div class="card-teamup-title">Today’s games</div>
                        <div class="card-teamup-meta">
                            Based on your recent activity and sport preferences.
                        </div>
                    </div>
                    <span class="badge-soft">Thursday · 2 matches</span>
                </div>

                <div class="d-flex flex-column mt-2 small">

                    <!-- Game 1 -->
                    <div class="game-row">
                        <div class="game-row-main">
                            <div class="game-row-title">Downtown Court A · Tennis</div>
                            <div class="game-row-meta">
                                19:00 – 20:00 · 4/4 players
                            </div>
                        </div>
                        <div class="game-row-actions">
                            <span class="badge-green">You’re in</span>
                            <button class="btn-secondary-teamup btn-sm">
                                View details
                            </button>
                        </div>
                    </div>

                    <hr class="game-divider" />

                    <!-- Game 2 -->
                    <div class="game-row">
                        <div class="game-row-main">
                            <div class="game-row-title">Park Field 2 · Soccer</div>
                            <div class="game-row-meta">
                                21:30 – 23:00 · 8/10 players
                            </div>
                        </div>
                        <div class="game-row-actions">
                            <span class="badge-soft">2 spots left</span>
                            <button class="btn-primary-teamup btn-sm">
                                Join game
                            </button>
                        </div>
                    </div>

                </div>
            </div>

            <!-- Suggested games -->
            <div class="card-teamup">
                <div class="card-teamup-header">
                    <div>
                        <div class="card-teamup-title">Suggested for you</div>
                        <div class="card-teamup-meta">
                            Nearby games that match your usual time and level.
                        </div>
                    </div>
                    <span class="badge-soft">Within 10 km</span>
                </div>

                <div class="courts-grid mt-3">

                    <!-- Suggested card 1 -->
                    <div class="suggested-card">
                        <div class="suggested-header">
                            <div>
                                <div class="suggested-title">Unionville Rec Center</div>
                                <div class="suggested-location">Badminton · Casual</div>
                            </div>
                            <span class="time-pill">Tonight · 18:30</span>
                        </div>

                        <div class="suggested-meta">
                            <span>2 courts free</span>
                            <span>3/6 players joined</span>
                        </div>

                        <div class="suggested-cta">
                            <button class="btn-secondary-teamup w-100">
                                View lobby
                            </button>
                        </div>
                    </div>

                    <!-- Suggested card 2 -->
                    <div class="suggested-card">
                        <div class="suggested-header">
                            <div>
                                <div class="suggested-title">Centennial Park Court B</div>
                                <div class="suggested-location">Basketball · Semi-competitive</div>
                            </div>
                            <span class="time-pill">Tomorrow · 20:00</span>
                        </div>

                        <div class="suggested-meta">
                            <span>Outdoor</span>
                            <span>6/10 players joined</span>
                        </div>

                        <div class="suggested-cta">
                            <button class="btn-primary-teamup w-100">
                                Join waiting list
                            </button>
                        </div>
                    </div>

                </div>
            </div>

        </div>

        <!-- RIGHT COLUMN: bookings & quick actions -->
        <aside class="dashboard-side">

            <!-- Upcoming bookings -->
            <div class="card-teamup">
                <div class="card-teamup-header">
                    <div class="card-teamup-title">My upcoming bookings</div>
                    <span class="badge-soft">Next 7 days</span>
                </div>

